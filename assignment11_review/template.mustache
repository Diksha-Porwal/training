{{#posts}}
<div class="row item">
  <div class="col-sm-2 align-center" data-trigger="hover" data-toggle="popover" data-content="{{name}}"><img class="item-thumbnail" src="{{imageUrl}}" alt="NA" /> </div>
  <div class="col-sm-10 item-padding">
    <div class="clearfix">
      <div class="pull-left"><b>{{name}}</b></div>
      <div class="pull-right item-time">{{time}}</div>
    </div>
    <div class="item-description">{{description}}</div>
  </div>
</div>
{{/posts}}
